{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "ES2022", "es2021", "DOM"],
    "allowJs": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noEmit": false,
    "noEmitOnError": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "jsx": "react",
    "declarationMap": false,
    "sourceMap": false,
    "paths": {
      "@mpv-easy/tool": ["./mpv-tool/src"],
      "@mpv-easy/clipboard-play": ["./mpv-clipboard-play/src"],
      "@mpv-easy/jellyfin": ["./mpv-jellyfin/src"],
      "@mpv-easy/autoload": ["./mpv-autoload/src"],
      "@mpv-easy/assdraw": ["./mpv-assdraw/src"],
      "@mpv-easy/mock": ["./mpv-mock/src"],
      "@mpv-easy/react": ["./mpv-react/src"],
      "@mpv-easy/flex": ["./mpv-flex/src"],
      "@mpv-easy/plugin": ["./mpv-plugin/src"],
      "@mpv-easy/anime4k": ["./mpv-anime4k/src"],
      "@mpv-easy/anime": ["./mpv-anime/src"],
      "@mpv-easy/i18n": ["./mpv-i18n/src"],
      "@mpv-easy/copy-time": ["./mpv-copy-time/src"],
      "@mpv-easy/copy-screen": ["./mpv-copy-screen/src"],
      "@mpv-easy/polyfill": ["./mpv-polyfill/src"],
      "@mpv-easy/thumbfast": ["./mpv-thumbfast/src"],
      "@mpv-easy/easy-react": ["./mpv-easy-react/src"],
      "@mpv-easy/canvas": ["./mpv-canvas/src"],
      "@mpv-easy/playground": ["./mpv-playground/src"],
      "@mpv-easy/js-plugin-init": ["./mpv-js-plugin-init/src"],
      "@mpv-easy/mpsm": ["./mpv-mpsm/src"],
      "@mpv-easy/play-with": ["./mpv-play-with/src"],
      "@mpv-easy/translate": ["./mpv-translate/src"],
      "@mpv-easy/easy-react-tpl": ["./mpv-easy-tpl/src"],
      "@mpv-easy/cut": ["./mpv-cut/src"],
      "@mpv-easy/crop": ["./mpv-crop/src"]
    }
  },
  "include": ["**/src", "**/test", "**/example", "**/scripts"],
  "exclude": ["**/dist"]
}
