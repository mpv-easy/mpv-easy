{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "ES2022", "es2021"],
    "allowJs": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noEmit": false,
    "noEmitOnError": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "jsx": "react",
    "declarationMap": false,
    "sourceMap": false,
    "paths": {
      "@mpv-easy/tool": ["./mpv-tool/src"],
      "@mpv-easy/clip-play": ["./mpv-clip-play/src"],
      "@mpv-easy/hook": ["./mpv-hook/src"],
      "@mpv-easy/autoload": ["./mpv-autoload/src"],
      "@mpv-easy/assdraw": ["./mpv-assdraw/src"],
      "@mpv-easy/mock": ["./mpv-mock/src"],
      "@mpv-easy/ui": ["./mpv-ui/src"],
      "@mpv-easy/plugin": ["./mpv-plugin/src"],
      "@mpv-easy/anime4k": ["./mpv-anime4k/src"],
      "@mpv-easy/anime": ["./mpv-anime/src"],
      "@mpv-easy/i18n": ["./mpv-i18n/src"],
      "@mpv-easy/copy-time": ["./mpv-copy-time/src"],
      "@mpv-easy/copy-screen": ["./mpv-copy-screen/src"],
      "@mpv-easy/polyfill": ["./mpv-polyfill/src"],
      "@mpv-easy/thumbfast": ["./mpv-thumbfast/src"],
      "@mpv-easy/mpv-easy": ["./mpv-easy/src"],
      "@mpv-easy/canvas": ["./mpv-canvas/src"],
      "@mpv-easy/playground": ["./mpv-playground/src"],
      "@mpv-easy/js-plugin-init": ["./mpv-js-plugin-init/src"],
      "@mpv-easy/mpv-mpsm": ["./mpv-mpsm/src"]
    }
  },
  "include": ["**/src", "**/test", "**/example"],
  "exclude": ["**/dist"]
}
